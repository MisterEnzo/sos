<!DOCTYPE html>
<html>
  <head>
    <title>Sos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if !notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if !alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
    <%= yield :after_js %>
  </body>
</html>
